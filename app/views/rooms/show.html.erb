<%= turbo_stream_from @room %>
<%= turbo_stream_from @client.id %>

<article
  class="room"
  data-controller="room"
  data-room-id-value="<%= @room.id %>"
  data-room-client-id-value="<%= @client.id %>"
  data-action="medium:connect->room#negotiateConnection"
>
  <div class="media" id="media">
    <div class="medium medium--local">
      <video data-room-target="localMedium" muted autoplay playsinline></video>

    </div>
  </div>

  <%= button_tag 'Enter', data: { action: 'room#enter' } %>
</article>
